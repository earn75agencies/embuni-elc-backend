{
  "name": "elp-backend",
  "version": "1.0.0",
  "description": "Backend API for University of Embu Equity Leaders Program",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:ci": "NODE_ENV=test jest --ci --coverage --detectOpenHandles --forceExit",
    "seed": "node scripts/seed.js",
    "seed:prod": "NODE_ENV=production node scripts/seed.js",
    "backup": "node scripts/backup.js backup",
    "restore": "node scripts/backup.js restore",
    "list-backups": "node scripts/backup.js list",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "prestart": "npm run build",
    "build": "npm install --production && npm prune --production",
    "clean": "rm -rf node_modules package-lock.json && npm cache clean --force",
    "security-check": "npx npm-audit-html && npx snyk test --json > snyk-report.json"
  },
  "keywords": [
    "equity",
    "leaders",
    "university"
  ],
  "author": "ELP Dev Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "connect-mongo": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "handlebars": "^4.7.8",
    "he": "^1.2.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.8.2",
    "isomorphic-dompurify": "^2.33.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.11",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "rate-limit-redis": "^4.3.1",
    "redis": "^5.10.0",
    "socket.io": "^4.8.1",
    "validator": "^13.15.23",
    "winston": "^3.18.3",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "axios": "^1.13.2",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  }
}
